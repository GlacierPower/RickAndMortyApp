<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.glacierpower.rickandmorty.presentation.characters.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters">
        <action
            android:id="@+id/action_charactersFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <argument
            android:name="gender"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="status"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="name"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_charactersFragment_to_characterDetails"
            app:destination="@id/characterDetails" />
    </fragment>

    <dialog
        android:id="@+id/filterFragment"
        android:name="com.glacierpower.rickandmorty.presentation.characters.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter">
        <action
            android:id="@+id/action_filterFragment_to_charactersFragment"
            app:destination="@id/charactersFragment" />
    </dialog>

    <fragment
        android:id="@+id/characterDetails"
        android:name="com.glacierpower.feature.characterDetails.CharacterDetails"
        android:label="CharacterDetails">
        <action
            android:id="@+id/action_characterDetails_to_charactersFragment"
            app:destination="@id/charactersFragment" />
        <argument
            android:name="id"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.glacierpower.feature.episode.Episode"
        android:label="Episode"
        tools:layout="@layout/episodeFragment">
        <action
            android:id="@+id/action_episodeFragment_to_episodeFilter"
            app:destination="@id/episodeFilter" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="episode"
            android:defaultValue="" />
    </fragment>

    <dialog
        android:id="@+id/episodeFilter"
        android:name="com.glacierpower.feature.episode.EpisodeFilter"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_episode_filter">

        <action
            android:id="@+id/action_episodeFilter_to_episodeFragment"
            app:destination="@id/episodeFragment" />
    </dialog>

</navigation>
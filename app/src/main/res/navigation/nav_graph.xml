<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.glacierpower.rickandmorty.presentation.characters.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <argument
            android:name="gender"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="status"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.glacierpower.rickandmorty.presentation.episode.Episode"
        android:label="fragment_episode"
        tools:layout="@layout/fragment_episode" />
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.glacierpower.rickandmorty.presentation.location.Location"
        android:label="fragment_location"
        tools:layout="@layout/fragment_location" />
    <dialog
        android:id="@+id/filterFragment"
        android:name="com.glacierpower.rickandmorty.presentation.characters.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_charactersFragment"
            app:destination="@id/charactersFragment" />
    </dialog>
</navigation>